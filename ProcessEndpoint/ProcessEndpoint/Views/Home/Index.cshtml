@model ProcessEndpoint.Models.FileSaveViewModel

@{
    ViewData["Title"] = "Welcome to Minimal Blog";
}

<div class="container px-6 mx-auto grid" x-cloak>
    <h1 class="my-6 text-3xl font-semibold text-gray-700 dark:text-gray-200">
        List of Workflows
    </h1>
    <!-- Cards Items -->   

    <div class="flex flex-row gap-4">        
        <div class='break-inside relative overflow-hidden flex flex-col justify-between space-y-3 text-sm rounded-xl max-w-[23rem] p-4 mb-4 bg-white text-black dark:bg-slate-800 dark:text-white'>
            <div class='flex items-center justify-between font-medium'>
                <span class='uppercase text-xs text-green-500'>Workflow Category</span>
                <span class='text-xs text-slate-500'>#workflowtag</span>
            </div>
            <div class='flex flex-row items-center space-x-3'>
                <div class='flex flex-none items-center justify-center w-10 h-10 rounded-full bg-green-500 text-white'>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                </div>
                <span class='text-base font-medium'>Worflow Title</span>
            </div>
            <div> [Workflow Description] Lorem ipsum dolor sit amet, consectetur adipiscing elitsed do eiusmod.</div>
            <div class='flex justify-between items-center w-full'>            
                <button 
                    @@click="openModal"
                    class='w-full flex items-center justify-center text-sm font-medium rounded-full px-4 py-1 space-x-1 border-2 border-green-500 bg-white hover:bg-green-500 hover:text-white text-black dark:bg-slate-800 dark:text-white dark:border-white dark:hover:bg-white dark:hover:text-black'>
                    <span>Launch</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                    </svg>
                </button>
            </div>
        </div>
    </div>


</div>

<!-- Modal backdrop. This what you want to place close to the closing body tag -->
<div
    x-show="isModalOpen"
    x-transition:enter="transition ease-out duration-150"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    x-cloak    
    class="modal fixed top-0 right-0 bottom-0 left-0 overflow-x-hidden overflow-y-auto inset-0 z-30 block outline-none bg-black bg-opacity-50"
>
    <!-- Modal -->
    <div
        x-show="isModalOpen"
        x-transition:enter="transition ease-out duration-150"
        x-transition:enter-start="opacity-0 transform translate-y-1/2"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0  transform translate-y-1/2"
        @@click.away="closeModal"
        @@keydown.escape="closeModal"
        class="w-full px-6 py-4 overflow-hidden bg-white rounded-t-lg mx-auto my-4 relative pointer-event dark:bg-gray-800 sm:rounded-lg sm:max-w-xl"
        role="dialog"
        id="modal"
        >
        <form asp-action="TriggerWorkflow" asp-controller="Home" method="post">
            <!-- Remove header if you don't want a close icon. Use modal body to place modal tile. -->
            <header class="flex justify-end">
            <button
                class="inline-flex items-center justify-center w-6 h-6 text-gray-400 transition-colors duration-150 rounded dark:hover:text-gray-200 hover: hover:text-gray-700"
                aria-label="close"
                @@click="closeModal"
            >
                <svg
                class="w-4 h-4"
                fill="currentColor"
                viewBox="0 0 20 20"
                role="img"
                aria-hidden="true"
                >
                <path
                    d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                    clip-rule="evenodd"
                    fill-rule="evenodd"
                ></path>
                </svg>
            </button>
            </header>
            <!-- Modal body -->
            <div class="mt-4 mb-6">
            <!-- Modal title -->
            <p
                class="mb-2 text-lg font-semibold text-gray-700 dark:text-gray-300"
            >
                Modal header
            </p>
            <!-- Modal description -->
            <p class="text-sm text-gray-700 dark:text-gray-400">
                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Nostrum et
                eligendi repudiandae voluptatem tempore!
            </p>
            <div class="grid grid-cols-1 gap-6 mt-3">
                <label class="block">
                    <span class="text-gray-700">FileName</span>
                    <input type="text" name = "" class="
                        mt-1
                        block
                        w-full
                        rounded-md
                        bg-gray-100
                        border-transparent
                        focus:border-green-500 focus:bg-white focus:ring-0
                    " placeholder="Please enter the filename" asp-for="FileName">
                    <span asp-validation-for="FileName" class="text-red-500 text-xs"></span>
                    <span class="text-gray-400 text-xs">Please enter the filename with extension. e.g: test.txt</span>
                </label>
                <label class="block">
                    <span class="text-gray-700">Folder Path</span>
                    <input type="email" class="
                        mt-1
                        block
                        w-full
                        rounded-md
                        bg-gray-100
                        border-transparent
                        focus:border-green-500 focus:bg-white focus:ring-0
                    " placeholder="Please enter the folder" asp-for="FolderPath">
                    <span asp-validation-for="FolderPath" class="text-red-500 text-xs"></span>
                    <span class="text-gray-400 text-xs">If you want to save the file into a specific folder, please provide the path of this folder. If you don't provide this value, the file will be saved intot the root folder. <br/> N.B: The root path of the saved file is <span class="px-2 py-1 text-xs  text-white font-bold bg-green-500 rounded-md">./wwwroot/files</span>.</span>
                </label>              
                <label class="block">
                    <span class="text-gray-700">Content</span>
                    <textarea class="
                        mt-1
                        block
                        w-full
                        rounded-md
                        bg-gray-100
                        border-transparent
                        focus:border-green-500 focus:bg-white focus:ring-0
                    " rows="6" asp-for="Content"></textarea>
                    <span asp-validation-for="Content" class="text-red-500 text-xs"></span>
                    <span class="text-gray-400 text-xs">Here the content of the file here.</span>                    
                </label>              
                </div>
            </div>
            <footer
            class="flex flex-col items-center justify-end px-6 py-3 -mx-6 -mb-4 gap-2 sm:flex-row bg-gray-50 dark:bg-gray-800"
            >
            <button
                @@click="closeModal"
                type="button"
                class="w-full px-5 py-3 text-sm font-medium leading-5 text-gray-700 transition-colors duration-150 border border-gray-300 rounded-lg dark:text-gray-400 sm:px-4 sm:py-2 sm:w-auto active:bg-transparent hover:border-gray-500 focus:border-gray-500 active:text-gray-500 focus:outline-none focus:shadow-outline-gray"
            >
                Cancel
            </button>
            <button
                type="submit"
                class="w-full px-5 py-3 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-green-500 border border-transparent rounded-lg sm:w-auto sm:px-4 sm:py-2 active:bg-green-400 hover:bg-green-300 focus:outline-none focus:shadow-outline-purple"
            >
                Accept
            </button>
            </footer>
        </form>
    </div>
</div>
    <!-- End of modal backdrop -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}